page {
  height: 100%;
  width: 100%;
  position: relative;
}

.container {
  background-color: aqua;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  font-size: 16px;
  color: #666;
}

.movable-area {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.movable-test {
  background-color: aqua;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.movable-view {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}

.map-image {
  /* 确保地图图片正确显示 */
  position: absolute;
  top: 0;
  left: 0;
}

.marker {
  position: absolute;
  width: 30px;
  height: 30px;
  transform: translate(-50%, -100%); /* 让Marker的坐标点位于底部中心 */
  z-index: 10;
}

.marker-icon {
  width: 100%;
  height: 100%;
  background-color: red;
  border-radius: 50%;
  border: 2px solid white;
  box-shadow: 0 2px 5px rgba(0,0,0,0.3);
}

/* 图片标记点样式 */
.image-marker {
  width: 40px;
  height: 40px;
  transform: translate(-50%, -50%); /* 图片标记点中心对齐 */
}

.marker-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 2px solid white;
  box-shadow: 0 2px 8px rgba(0,0,0,0.4);
}

.reset-btn {
  position: absolute;
  bottom: 30px;
  right: 20px;
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 10px 20px;
  border-radius: 20px;
  font-size: 14px;
  z-index: 100;
}

/* 弹窗样式 */
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
}

.popup-container {
  background-color: white;
  width: calc(100% - 40px);
  margin: 0 20px 20px 20px;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 20px 15px 20px;
  border-bottom: 1px solid #f0f0f0;
}

.popup-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.popup-close {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  font-size: 24px;
  color: #666;
  line-height: 1;
}

.popup-content {
  flex: 1;
  overflow-y: auto;
  padding: 20px;
}

.popup-image {
  width: 100%;
  height: 180px;
  border-radius: 12px;
  margin-bottom: 20px;
}

.popup-description {
  font-size: 16px;
  line-height: 1.5;
  color: #555;
  margin-bottom: 20px;
}

.popup-video-section {
  margin-top: 20px;
  padding-top: 20px;
  border-top: 1px solid #f0f0f0;
}

.video-btn {
  background-color: #07c160;
  color: white;
  border: none;
  border-radius: 8px;
  padding: 12px 24px;
  font-size: 16px;
  width: 100%;
}

.video-btn:active {
  background-color: #06ad56;
}

/* 视频播放器样式 */
.video-player-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.video-player-container {
  background-color: #000;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.video-player-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  background-color: rgba(0, 0, 0, 0.8);
  color: white;
}

.video-player-title {
  font-size: 18px;
  font-weight: bold;
  color: white;
}

.video-player-close {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.video-player {
  flex: 1;
  width: 100%;
}
